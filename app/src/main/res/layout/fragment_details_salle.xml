<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_list_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.ListSalleFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/holder_details_salle_nom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        style="@style/TextAppearance.MyTheme.Body1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/holder_details_salle_presence_label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="PrÃ©sence"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="16dp"
        style="@style/TextAppearance.MyTheme.Body1"
        app:layout_constraintTop_toBottomOf="@id/holder_details_salle_nom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/holder_details_salle_presence"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/holder_details_salle_presence"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:paddingHorizontal="16dp"
        style="@style/TextAppearance.MyTheme.Body1"
        app:layout_constraintTop_toTopOf="@id/holder_details_salle_presence_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/holder_details_salle_presence_label"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/holder_details_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/holder_details_salle_presence_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:itemCount="5"
        tools:listitem="@layout/holder_eclairage" />

</androidx.constraintlayout.widget.ConstraintLayout>